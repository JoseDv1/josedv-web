---
import Navbar from "../components/Navbar.astro";

interface Props {
	title: string;
	description: string;
	keywords: string[];
}

const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="author" content="JoseDv" />
		<meta name="keywords" content={keywords.join(", ")} />
		<link rel="icon" href="/Jose.webp" />
		<title>{title}</title>
	</head>
	<body>
		<main
			class="grid grid-cols-[100px,1fr] relative max-sm:grid-cols-1 w-screen h-auto min-h-screen"
		>
			<Navbar />
			<slot />
		</main>
	</body>
	<style is:global>
		@import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

		:root {
			--primary: #ae2f31;
			--secondary: #ff625e;
			--light-bg: #d9d9cf;
			--medium-bg: #c3c5bb;
			--dark-bg: #1d1e2355;
			--white: #eaeaea;
			--black: #232323;

			--default-shadow: 0 4px 6px 3px rgba(0, 0, 0, 0.25);
		}

		*,
		*::after,
		*::before {
			box-sizing: border-box;
			padding: 0;
			margin: 0;
			/* Debug */
			outline: 1px solid yellow;
		}

		body {
			font-family:
				"Inter",
				system-ui,
				-apple-system,
				BlinkMacSystemFont,
				"Segoe UI",
				Roboto,
				Oxygen,
				Ubuntu,
				Cantarell,
				"Open Sans",
				"Helvetica Neue",
				sans-serif;
			font-size: 16px;
			line-height: 1.5;

			background: url(/background.webp);
			background-position: top left;
			background-repeat: repeat;
			background-blend-mode: multiply;
			background-size: 120%;
			background-color: #d9d9cf88;
			color: var(--black);

			max-width: 100vw;
			overflow-x: hidden;
		}

		a {
			color: var(--primary);
		}

		a:hover {
			color: var(--secondary);
		}

		@keyframes bounce {
			0% {
				transform: translateY(0);
			}

			50% {
				transform: translateY(-5px);
			}

			100% {
				transform: translateY(0);
			}
		}
	</style>
</html>

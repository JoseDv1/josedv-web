---
import Navbar from "../components/Navbar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="La web de JoseDv1 aqui podras ver sus proyectos, su formacion, la experiencia que tiene y todo lo que ha logrado crear"
		/>
		<meta name="author" content="JoseDv" />
		<meta
			name="keywords"
			content="JoseDv, JoseDv1, JoseDv Web, JoseDv Proyectos, JoseDv Portfolio, JoseDv Portafolio, JoseDv1 Web, JoseDv1, JoseDv1 Proyectos JoseDv1 Portfolio JoseDv1 Portafolio, Jose David Villegas Web, Jose David Villegas, Jose David Villegas Proyectos Jose David Villegas Portfolio Jose David Villegas Portafolio, Developer, Developer Guatape, Developer FullStack Guatape, Guatape Dev, Desarrollador, Desarrollador Guatape, Guatape pueblo de zocalos"
		/>
		<link rel="icon" href="/Jose.webp" />
		<title>{title}</title>
	</head>
	<body>
		<main class="grid grid-cols-[100px,1fr] relative max-sm:grid-cols-1">
			<Navbar />
			<slot />
		</main>
	</body>
	<style is:global>
		@import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

		:root {
			--primary: #ae2f31;
			--secondary: #ff625e;
			--light-bg: #d9d9cf;
			--medium-bg: #c3c5bb;
			--dark-bg: #1d1e2355;
			--white: #eaeaea;
			--black: #232323;

			--default-shadow: 0 4px 6px 3px rgba(0, 0, 0, 0.25);
		}

		*,
		*::after,
		*::before {
			box-sizing: border-box;
			padding: 0;
			margin: 0;
		}

		body {
			font-family:
				"Inter",
				system-ui,
				-apple-system,
				BlinkMacSystemFont,
				"Segoe UI",
				Roboto,
				Oxygen,
				Ubuntu,
				Cantarell,
				"Open Sans",
				"Helvetica Neue",
				sans-serif;
			font-size: 16px;
			line-height: 1.5;

			background: url(/background.webp);
			background-position: top left;
			background-repeat: repeat;
			background-blend-mode: multiply;
			background-size: 120%;
			background-color: #d9d9cf88;
			color: var(--black);

			max-width: 100vw;
			overflow-x: hidden;
		}

		a {
			color: var(--primary);
		}

		a:hover {
			color: var(--secondary);
		}

		@keyframes bounce {
			0% {
				transform: translateY(0);
			}

			50% {
				transform: translateY(-5px);
			}

			100% {
				transform: translateY(0);
			}
		}
	</style>
</html>
